{
  "name": "@itamar.givon/blockly-vue",
  "version": "0.0.2",
  "main": "dist/blockly-vue.umd.js",
  "unpkg": "dist/blockly-vue.min.umd.js",
  "scripts": {
    "serve": "vue-cli-service serve",
    "test": "yarn test:unit",
    "build": "vue-cli-service build",
    "build:lib": "vue-cli-service build --target lib --name blockly-vue src/components/Blockly.vue",
    "lint": "vue-cli-service lint",
    "styleguide": "vue-cli-service styleguidist",
    "styleguide:build": "vue-cli-service styleguidist:build",
    "test:unit": "vue-cli-service test:unit"
  },
  "repository": "github:itamargiv/blockly-vue",
  "peerDependencies": {
    "vue": "^2.6.10"
  },
  "dependencies": {
    "blockly": "^2.20190722.1",
    "core-js": "^2.6.5",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-eslint": "^3.11.0",
    "@vue/cli-plugin-unit-jest": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "fetch-mock": "^7.4.0",
    "np": "^5.1.1",
    "vue-cli-plugin-styleguidist": "^3.24.2",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
